{
    "name": "mrccnt/password-ssha",
    "description": "Wrapper around PHPs password_() functions with support for SSHA",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Marco Conti",
            "email": "github@marcoconti.org"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "MrCcnt\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload-dev": {
        "psr-4": {
            "MrCcnt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests",
        "testdox": "./vendor/bin/phpunit --testdox tests"
    }
}
